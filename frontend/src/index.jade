html(ng-app="Momentum")
	head
		title Iskolarship

		// import the bootstrap stylesheets
		link(href='/lib/bootstrap/css/bootstrap.css', rel='stylesheet')
		link(href='/lib/bootstrap/css/bootstrap-responsive.css', rel='stylesheet')

		//import font-awesome
		link(href='/lib/font-awesome/font-awesome.min.css', rel='stylesheet')

		// import the css styles we created in the /css/ folder
		link(href='/css/styles.css', rel='stylesheet')

		// import the jquery, bootstrap, and Angular JS libraries
		script(src='/lib/jquery-1.9.1.js') 
		script(src='/lib/bootstrap/js/bootstrap.js')
		script(src='/lib/angular-1.1.5/angular.js')

		// import the javascript code we created in the /js/ folder
		script(src='/js/app.js', type='text/javascript')
		script(src='/js/message.js', type='text/javascript')
		script(src='/js/directives.js', type='text/javascript')
		script(src='/js/exer.js', type='text/javascript')
		script(src='/js/meli.js', type='text/javascript')
		script(src='/js/dan.js', type='text/javascript')
		script(src='/js/adelen.js', type='text/javascript') 

	body
		.navbar.navbar-fixed-top
			.navbar-inner
				.container
					a.brand(href="#/home") 
						i.icon-book  Iskolarship
					.nav-collapse.collapse
						ul.nav
							li
								a.active(href="#/home") Home
							li
								a(href="#/donate") Donate
							li
								a(href="#/success-stories") Success Stories
							li
								a(href="#/aff") Affiliations
							li
								a(href="#/about") About
						ul.nav.pull-right
							li
								a(href="#/home-sponsor") Home-Sponsor
							li
								a(href="#/home-student") Home-Student
							li.dropdown
								a.dropdown-toggle(href="",data-toggle="dropdown") 
									i.icon-user   Login
								.dropdown-menu(style="padding:20px")
									form(action="temp",method="post")
										input#username_id(type="text",name="username_id",style="height:30px;margin-top:15px",placeholder="Username")
										input#password(type="password",name="password",style="height:30px",placeholder="Password")
										input#remember(type="checkbox",name="remember",style="float:left;margin-right:10px")
										label.string.optional(for="remember") Remember me
										input.btn.btn-primary(type="submit",value="Log in")
							li
								a(href="")
									i.icon-edit   Signup
	
		.jumbotron
			.banner
				.container
					h1 Iskolarship
					p.lead Crowd-funded education for college students
		.container(ng-view,style="width:100%")
